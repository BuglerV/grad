<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
{% for style in css %}
        <link href="{{ pathInfo }}{{ style }}" rel="stylesheet">
{% endfor %}
    </head>
    <body>
      <script>
        var mainPath = "{{ pathInfo }}";
{% for jsVar in jsVars %}
        var {{ jsVar.name }} = "{{ jsVar.value | raw }}";
{% endfor %}
      </script>
        <div id="container">
<header>
{% block header %}
{% include 'base/header.public.twig' %}
{% endblock %}
</header>

{% if user('role') == 'admin' %}
<a class="admin_button" href="/admin/">{{ translate('admin_admin') }}</a>
<a class="admin_button" href="/admin/logout">{{ translate('admin_logout') }}</a>
{% endif %}

<div id="body">
{% block body %}
{{ body|raw }}
{% endblock %}
</div>

<footer>
{% block footer %}
Подножка
{% endblock %}
</footer>
        </div>
{% for script in js %}
        <script src="{{ pathInfo }}{{ script }}"></script>
{% endfor %}
    </body>
</html>