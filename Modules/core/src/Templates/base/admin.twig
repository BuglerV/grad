<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
{% for style in css %}
        <link href="{{ pathInfo }}{{ style }}" rel="stylesheet">
{% endfor %}
    </head>
    <body>
      <script>
        var mainPath = "{{ pathInfo }}";
{% for jsVar in jsVars %}
        var {{ jsVar.name }} = "{{ jsVar.value }}";
{% endfor %}
      </script>
        <div id="container">

<div id="body">
{% if user('role') == 'admin' %}
<a href="/admin" class="admin_button">{{ translate('admin_admin') }}</a>
<a href="/" class="admin_button">{{ translate('admin_home') }}</a>
<a href="/admin/logout" class="admin_button">{{ translate('admin_logout') }}</a><br>
{% endif %}
{% block body %}
{{ body|raw }}
{% endblock %}
</div>

        </div>
{% for script in js %}
        <script src="{{ pathInfo }}{{ script }}"></script>
{% endfor %}
    </body>
</html>