<div data-role="navigator" id="core_quote">
    <h>{{ translate('quotes_main_title') }}</h>
    <div class="window_body">
      <div class="quote_body"><i>{{ quote.quote | raw }}</i></div>
{% if quote.author %}
      <span class="right blog_tag" data-type="core_quote" data-name="{{ quote.author }}">{{ quote.author }}</span>
{% endif %}
      <div class="clear"></div>
      <span class="blog_tag right" data-type="core_quote">{{ translate('quotes_else') }}</span>
      <div class="clear"></div>
{% if user('role') == 'admin' %}
      <div class="right">
        <a href="/admin/quotes/change/{{ quote.id }}" class="admin_button">{{ translate('crud_change') }}</a><br>
        <a href="/admin/quotes/list/" class="admin_button">{{ translate('crud_all') }}</a>
        <a href="/admin/quotes/new/" class="admin_button">{{ translate('crud_new') }}</a>
      </div>
      <div class="clear"></div>
{% endif %}
    </div>
</div>